<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net7.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
	<UseWindowsForms>true</UseWindowsForms>
    <ApplicationIcon>Icons\SADXModManager.ico</ApplicationIcon>
	  <Nullable>disable</Nullable>
	  <BaseOutputPath>..\bin\</BaseOutputPath>
  </PropertyGroup>

  <ItemGroup>
	<None Remove="Icons\SADXModManager_.png"/>
    <None Remove="Icons\Add.xaml" />
	<None Remove="Icons\Check.xaml"/>
    <None Remove="Icons\Close.xaml" />
	<None Remove="Icons\Config.xaml" />
	<None Remove="Icons\Delete.xaml"/>
	<None Remove="Icons\Edit.xaml"/>
	<None Remove="Icons\Play.xaml" />
	<None Remove="Icons\Refresh.xaml" />
    <None Remove="Icons\Save.xaml" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Extended.Wpf.Toolkit" Version="4.5.0" />
    <PackageReference Include="gong-wpf-dragdrop" Version="3.2.1" />
    <PackageReference Include="Octokit" Version="6.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\mod-loader-common\ModManagerCommon\ModManagerCommon.csproj" />
  </ItemGroup>

  <ItemGroup>
	  <Resource Include="Icons\SADXModManager_.png"/>
	  <Resource Include="Icons\Add.xaml" />
	  <Resource Include="Icons\Check.xaml"/>
	  <Resource Include="Icons\Close.xaml" />
	  <Resource Include="Icons\Config.xaml" />
	  <Resource Include="Icons\Delete.xaml"/>
	  <Resource Include="Icons\Edit.xaml"/>
	  <Resource Include="Icons\Play.xaml" />
	  <Resource Include="Icons\Refresh.xaml" />
	  <Resource Include="Icons\Save.xaml" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Settings.Designer.cs">
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
      <AutoGen>True</AutoGen>
      <DependentUpon>Settings.settings</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <None Update="Properties\Settings.settings">
      <Generator>SettingsSingleFileGenerator</Generator>
      <LastGenOutput>Settings.Designer.cs</LastGenOutput>
    </None>
  </ItemGroup>



</Project>

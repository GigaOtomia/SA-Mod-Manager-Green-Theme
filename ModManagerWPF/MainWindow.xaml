<Window x:Name="MainWindowManager" x:Class="ModManagerWPF.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:ModManagerWPF"
		mc:Ignorable="d"
		Title="SADX Mod Manager"
        MinHeight="550" MinWidth="590" Height="652" Width="620" WindowStartupLocation="CenterScreen">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl x:Name="tcMain" Background="Transparent">
            <TabItem x:Name="tabMain" Header="{DynamicResource MainTabMods}">
                <Grid x:Name="GridModList" Background="White">
        
                    <GroupBox Margin="10,5,34, 0">
                        <Grid VerticalAlignment="Bottom" Height="30" Margin="-4,0,-4,-3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="RefreshBtn" Content="{DynamicResource MainBtnRefresh}" Grid.Column="0" />
                            <Button x:Name="ConfigureModBtn" Content="{DynamicResource MainBtnConfigureMod}" Grid.Column="1"  Margin="10,0,0,0" />
                       
                        </Grid>

                    </GroupBox>

                    <GroupBox x:Name="BottomNewMod" Margin="10,5,34,0">
                        <Grid VerticalAlignment="Bottom" Height="30" HorizontalAlignment="Right" Margin="0,0,0,-4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="NewModBtn" Content="{DynamicResource MainBtnNewMod}"/>
                            
                        </Grid>
         
                    </GroupBox>
 
                                  <ListView x:Name="listMods" Margin="10,5,34,41" Foreground="White">
                        <ListView.View>
                            <GridView>
                                <GridView.Columns>
                                    <GridViewColumn Header="{DynamicResource MainTabModName}" Width="150">

                                    </GridViewColumn>
                                    <GridViewColumn Header="{DynamicResource MainTabModAuthor}" Width="120">

                                    </GridViewColumn>
                                    <GridViewColumn Header="{DynamicResource MainTabModVersion}" Width="60">

                                    </GridViewColumn>
                                    <GridViewColumn Header="{DynamicResource MainTabModCategory}" Width="80">

                                    </GridViewColumn>
                                </GridView.Columns>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button x:Name="btnMoveTop" Content="T" HorizontalAlignment="Right" Margin="0,10,9,0" VerticalAlignment="Top" Width="20"/>
                    <Button x:Name="btnMoveUp" Content="U" HorizontalAlignment="Right" Margin="0,35,9,0" VerticalAlignment="Top" Width="20"/>
                    <Button x:Name="btnMoveDown" Content="D" HorizontalAlignment="Right" Margin="0,60,9,0" VerticalAlignment="Top" Width="20"/>
                    <Button x:Name="btnMoveBottom" Content="B" HorizontalAlignment="Right" Margin="0,85,9,0" VerticalAlignment="Top" Width="20"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="tbCodes" Header="{DynamicResource MainTabCodes}" Margin="3,0,-3,0">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem x:Name="tabGame" Header="{DynamicResource MainTabGameConfig}" Margin="6,0,-6,0">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="42*"/>
                        <ColumnDefinition Width="265*"/>
                    </Grid.ColumnDefinitions>
                    <TabControl x:Name="tcGame" Grid.ColumnSpan="2" Margin="0,0,0,80">
                        <TabItem x:Name="tabGraphics" Header="Graphics">
                            <Grid Background="#FFE5E5E5"/>
                        </TabItem>
                        <TabItem x:Name="tabInput" Header="Input">
                            <Grid Background="#FFE5E5E5"/>
                        </TabItem>
                        <TabItem x:Name="tabSound" Header="Sound">
                            <Grid Background="#FFE5E5E5"/>
                        </TabItem>
                        <TabItem x:Name="tabPatches" Header="Patches">
                            <Grid Background="#FFE5E5E5"/>
                        </TabItem>
                        <TabItem x:Name="tabDebug" Header="Debug">
                            <Grid Background="#FFE5E5E5"/>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
            <TabItem x:Name="tabConfig" Header="{DynamicResource MainTabManagerConfig}" Margin="9,0,-9,0">
                <Grid Background="#FFE5E5E5">
                    <GroupBox x:Name="grpManUpdates" Header="Updates" HorizontalAlignment="Center" VerticalAlignment="Top" Height="75" Width="444">
                        <Grid Width="Auto" Height="Auto">
                            <CheckBox x:Name="chkUpdatesML" Content="Check for Mod Loader Updates on Startup" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                            <CheckBox x:Name="chkUpdatesMods" Content="Check for Mod Updates on Startup" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox x:Name="grpManSettings" Header="Options" HorizontalAlignment="Center" VerticalAlignment="Top" Height="337" Width="444" Margin="0,80,0,0">
                        <Grid Width="Auto" Height="Auto">
                            <Label x:Name="lblTheme" Content="Theme:" HorizontalAlignment="Left" Margin="10,8,0,0" VerticalAlignment="Top"/>
                            <Label x:Name="lblLanguage" Content="Language:" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top"/>
                            <ComboBox x:Name="comboThemes" HorizontalAlignment="Left" Margin="96,10,0,0" VerticalAlignment="Top" Width="326"/>
                            <ComboBox x:Name="comboLanguage" HorizontalAlignment="Left" Margin="96,37,0,0" VerticalAlignment="Top" Width="326" SelectionChanged="comboLanguage_SelectionChanged"/>
                            <ComboBox x:Name="comboLanguage_Copy" HorizontalAlignment="Left" Margin="96,64,0,0" VerticalAlignment="Top" Width="294"/>
                            <Label x:Name="lblProfile" Content="Profile:" HorizontalAlignment="Left" Margin="10,62,0,0" VerticalAlignment="Top"/>
                            <Button x:Name="btnProfileSettings" Content="S" HorizontalAlignment="Left" Margin="395,64,0,0" VerticalAlignment="Top" Width="27" Height="22"/>
                            <Button x:Name="btnOneClick" Content="Enable 1-Click Install" HorizontalAlignment="Left" Margin="10,93,0,0" VerticalAlignment="Top" Width="Auto"/>
                        </Grid>
                    </GroupBox>

                </Grid>
            </TabItem>
        </TabControl>
        <Grid Grid.Row="1" Background="#FFF0F0F0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="209*"/>
                <ColumnDefinition Width="101*"/>
            </Grid.ColumnDefinitions>
            <Grid x:Name="bottomGrid" Margin="7,0,0,0" VerticalAlignment="Center" Height="60" Grid.ColumnSpan="2">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button x:Name="SaveAndPlayButton" Content="{DynamicResource MainBtnSaveAndPlay}" Width="130" MaxHeight="30" Margin="0,8,0,8"/>
                    <Button x:Name="SaveButton"  Content="{DynamicResource MainBtnSave}"  Width="130" MaxHeight="30" Margin="6,8,5,8"/>
                    <Button x:Name="InstallLoaderBtn" Content="{DynamicResource MainBtnInstallLoader}" Width="130" MaxHeight="30" Margin="0,8,0,8"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>

</Window>

									</Grid.RowDefinitions>

									<Label x:Name="lblProfile" Content="{DynamicResource ManagerLblProfile}" Grid.Row="0" VerticalAlignment="Center"/>
									<Label x:Name="lblGameDir" Content="{DynamicResource ManagerLblGameDir}" Grid.Row="1" VerticalAlignment="Center"/>
									<Label x:Name="lblTheme" Content="{DynamicResource ManagerLblTheme}" Grid.Row="2" VerticalAlignment="Center"/>
									<Label x:Name="lblLanguage" Content="{DynamicResource ManagerLblLang}" Grid.Row="3" VerticalAlignment="Center"/>
								</Grid>

								<!--Grid for Top Right Options-->
								<Grid Grid.Column="1" Grid.Row="0">
									<Grid.RowDefinitions>
										<RowDefinition Height="*"/>
										<RowDefinition Height="*"/>
										<RowDefinition Height="*"/>
										<RowDefinition Height="*"/>
									</Grid.RowDefinitions>

									<StackPanel Grid.Column="2" Grid.Row="0" Orientation="Horizontal">
                                        <ComboBox x:Name="comboProfile" Width="238" VerticalAlignment="Center" Margin="5,0,5,0" SelectionChanged="comboProfile_SelectionChanged" DisplayMemberPath="name"/>

                                        <Button x:Name="btnProfileSettings" Grid.Column="2" Height="22" Width="27" Click="btnProfileSettings_Click">
											<Image Source="{StaticResource IconProfiles}" Margin="1,1,1,1"/>
										</Button>
									</StackPanel>
									<StackPanel Grid.Column="2" Grid.Row="1" Orientation="Horizontal">
										<TextBox x:Name="textGameDir" Width="238" VerticalAlignment="Center" Margin="5,0,5,0" IsReadOnly="True"/>
										<Button x:Name="btnBrowseGameDir" Grid.Column="2" Height="22" Width="27" Click="btnBrowseGameDir_Click">
											<Image Source="{StaticResource IconFolder}" Margin="1,1,1,1"/>
										</Button>
									</StackPanel>
                                    <ComboBox x:Name="comboThemes" ItemsSource="{Binding ThemeList, Source={x:Static Application.Current}}" SelectedItem="{Binding CurrentTheme, Source={x:Static Application.Current}}" Grid.Column="2" Grid.Row="2" VerticalAlignment="Center" Margin="5,0,5,0" Loaded="comboThemes_Loaded" SelectionChanged="comboThemes_SelectionChanged" SelectedIndex="0"/>
                                    <ComboBox x:Name="comboLanguage" ItemsSource="{Binding LangList, Source={x:Static Application.Current}}" SelectedItem="{Binding CurrentLang, Source={x:Static Application.Current}}"  Grid.Column="2" Grid.Row="3" VerticalAlignment="Center" Margin="5,0,5,0" Loaded="comboLanguage_Loaded" SelectionChanged="comboLanguage_SelectionChanged" SelectedIndex="0"/>
								</Grid>

								<!--Grid for Bottoms Options-->
								<Grid Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="*"/>
										<ColumnDefinition Width="280"/>
									</Grid.ColumnDefinitions>
									<Grid.RowDefinitions>
										<RowDefinition Height="10"/>
										<RowDefinition Height="22"/>
										<RowDefinition Height="5"/>
										<RowDefinition Height="22"/>
									</Grid.RowDefinitions>

									<CheckBox x:Name="checkManagerOpen" Content="{DynamicResource ManagerCheckKeepOpen}" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center"/>
									<CheckBox x:Name="checkEnableTestSpawn" Content="{DynamicResource ManagerCheckTestSpawn}" Grid.Column="0" Grid.Row="3" VerticalAlignment="Center" Checked="checkEnableTestSpawn_Checked" Unchecked="checkEnableTestSpawn_Unchecked"/>
                                    <Button x:Name="btnOneClick" Grid.Column="1" Grid.Row="1" MaxWidth="280" VerticalAlignment="Center" Margin="5,0,5,0">
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="{StaticResource IconGB}" Width="20" Height="15" Margin="0,0,5,0"/>
                                            <TextBlock Text="{DynamicResource ManagerBtnEnableOneClick}" VerticalAlignment="Center"></TextBlock>
                                        </StackPanel>
                                    </Button>
                                    <Button x:Name="btnInstallLoader" Grid.Column="1" Grid.Row="3" MaxWidth="280" VerticalAlignment="Center" Margin="5,0,5,0" Click="btnInstallLoader_Click">
                                        <StackPanel Orientation="Horizontal">
                                            <Image x:Name="imgInstall" Source="{StaticResource IconInstall}" Height="15" Width="20" Margin="0,0,5,0"/>
                                            <TextBlock x:Name="txtInstallLoader" Text="{DynamicResource ManagerBtnInstallLoader}" VerticalAlignment="Center"></TextBlock>
                                        </StackPanel>
                                    </Button>
                                    
                                </Grid>
							</Grid>

							<!--Group Box for Update Configuration-->
							<GroupBox x:Name="grpManUpdates" Grid.Column="1" Grid.Row="2" Header="{DynamicResource ManagerGrpUpdates}"  VerticalAlignment="Top" Height="Auto" >
								<Grid>
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="10"/>
										<ColumnDefinition Width="20*"/>
										<ColumnDefinition Width="275*"/>
										<ColumnDefinition Width="294*"/>
										<ColumnDefinition Width="10"/>
									</Grid.ColumnDefinitions>
									<Grid.RowDefinitions>
										<RowDefinition Height="10"/>
										<RowDefinition Height="*"/>
										<RowDefinition Height="10"/>
									</Grid.RowDefinitions>

									<!--Update Check Boxes-->
									<Grid Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2">
										<Grid.ColumnDefinitions>
											<ColumnDefinition Width="Auto"/>
										</Grid.ColumnDefinitions>
										<Grid.RowDefinitions>
											<RowDefinition Height="Auto"/>
											<RowDefinition Height="5"/>
											<RowDefinition Height="Auto"/>
										</Grid.RowDefinitions>
										<CheckBox x:Name="chkUpdatesML" Content="{DynamicResource ManagerChkCheckModloader}" Grid.Column="1" Grid.Row="0" VerticalAlignment="Top" IsChecked="True"/>
										<CheckBox x:Name="chkUpdatesMods" Content="{DynamicResource ManagerChkCheckMods}" Grid.Column="1" Grid.Row="2" VerticalAlignment="Top" IsChecked="True"/>
									</Grid>

									<!--Update Buttons-->
									<Grid Grid.Column="3" Grid.Row="1" HorizontalAlignment="Right">
										<Grid.ColumnDefinitions>
											<ColumnDefinition Width="200"/>
										</Grid.ColumnDefinitions>
										<Button x:Name="btnCheckUpdates"  Grid.Column="0" Click="btnCheckUpdates_Click">
                                            <StackPanel Orientation="Horizontal">
                                                <Image Source="{StaticResource IconUpdate}" Width="20" Height="20" Margin="0,0,5,0"/>
                                                <TextBlock Text="{DynamicResource ManagerBtnCheckNow}"></TextBlock>
                                            </StackPanel>
                                        </Button>
                                    </Grid>
								</Grid>
							</GroupBox>

							<!--Group Box for Debug Features-->
							<GroupBox x:Name="grpManDebug" Grid.Column="1" Grid.Row="3" Header="{DynamicResource ManagerGrpDebug}">
								<Grid>
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="10"/>
										<ColumnDefinition Width="*"/>
										<ColumnDefinition Width="*"/>
										<ColumnDefinition Width="10"/>
									</Grid.ColumnDefinitions>
									<Grid.RowDefinitions>
										<RowDefinition Height="10"/>
										<RowDefinition Height="*"/>
										<RowDefinition Height="5"/>
										<RowDefinition Height="*"/>
										<RowDefinition Height="10"/>
									</Grid.RowDefinitions>

									<CheckBox x:Name="checkEnableLogConsole" Content="{DynamicResource ManagerCheckConsoleWindow}" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center"/>
									<CheckBox x:Name="checkEnableLogScreen" Content="{DynamicResource ManagerCheckPrintDebug}" Grid.Column="2" Grid.Row="1" VerticalAlignment="Center"/>
									<CheckBox x:Name="checkEnableLogFile" Content="{DynamicResource ManagerCheckLogToFile}" Grid.Column="1" Grid.Row="3" VerticalAlignment="Center"/>
									<CheckBox x:Name="checkEnableCrashDump" Content="{DynamicResource ManagerCheckCrashDumps}" Grid.Column="2" Grid.Row="3" VerticalAlignment="Center"/>
								</Grid>
							</GroupBox>
						</Grid>
					</GroupBox>

					<!--Group Box for About Section-->
					<GroupBox x:Name="grpManAbout" Grid.Column="1" Grid.Row="3" Header="{DynamicResource ManagerGrpAbout}">
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="10"/>
								<ColumnDefinition Width="*"/>
								<ColumnDefinition Width="10"/>
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition Height="10"/>
								<RowDefinition Height="*"/>
								<RowDefinition Height="*"/>
								<RowDefinition Height="10"/>
							</Grid.RowDefinitions>


							<Grid Grid.Column="1" Grid.Row="2" Margin="0,5,0,0">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="*"/>
									<ColumnDefinition Width="*"/>
								</Grid.ColumnDefinitions>
								<Grid.RowDefinitions>
									<RowDefinition Height="30"/>
									<RowDefinition Height="10"/>
									<RowDefinition Height="30"/>
								</Grid.RowDefinitions>

                                <Button x:Name="btnCredits" Grid.Column="0" Margin="5,0,5,0" Click="AboutBtn_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="{StaticResource IconContributors}" Width="20" Height="20" Margin="0,0,5,0"/>
                                        <TextBlock Text="{DynamicResource ManagerBtnCredits}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                                <Button x:Name="btnDocs" Grid.Column="0" Grid.Row="2" Margin="5,0,5,0">
									<StackPanel Orientation="Horizontal">
										<Image Source="{StaticResource IconDocs}" Width="20" Height="20" Margin="0,0,5,0"/>
										<TextBlock Text="{DynamicResource ManagerBtnDocs}" VerticalAlignment="Center"/>
									</StackPanel>
								</Button>
								<Button x:Name="btnSource" Grid.Column="1" Grid.Row="0" Margin="5,0,5,0" Click="btnSource_Click">
									<StackPanel Orientation="Horizontal">
										<Image Source="{StaticResource IconGithub}" Width="20" Height="20" Margin="0,0,5,0"/>
										<TextBlock Text="{DynamicResource ManagerBtnSource}" VerticalAlignment="Center"/>
									</StackPanel>
								</Button>
								<Button x:Name="btnReport" Grid.Column="1" Grid.Row="2" Margin="5,0,5,0" Click="btnReport_Click">
									<StackPanel Orientation="Horizontal">
										<Image Source="{StaticResource IconBugReport}" Width="20" Height="20" Margin="0,0,5,0"/>
										<TextBlock Text="{DynamicResource ManagerBtnReport}" VerticalAlignment="Center"/>
									</StackPanel>
								</Button>
							</Grid>
						</Grid>
					</GroupBox>
				</Grid>
			</TabItem>
		</TabControl>

		<!--This Grid manages the Save, Play, and Install buttons at the bottom of the app.-->
		<Grid Grid.Row="1"  Background="{DynamicResource MainDialogBottomBrush}">
			<!--This Gris manages the Save and Play Buttons.-->
			<Grid x:Name="bottomGrid" VerticalAlignment="Center" Height="60">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="10"/>
					<ColumnDefinition Width="160"/>
					<ColumnDefinition Width="10"/>
					<ColumnDefinition Width="160"/>
					<ColumnDefinition Width="73*"/>
					<ColumnDefinition Width="77*"/>
				</Grid.ColumnDefinitions>
				<Button x:Name="SaveAndPlayButton" MaxHeight="30" Grid.Column="1" Click="SaveAndPlayButton_Click" ToolTip="{DynamicResource TipMainSaveAndPlay}">
					<Grid>
                        <StackPanel Orientation="Horizontal">
                            <Image x:Name="savePlayIcon" Width="20" Height="20" Source="{StaticResource IconPlay}" Margin="0,0,5,0"/>
                            <TextBlock Text="{DynamicResource MainBtnSaveAndPlay}" VerticalAlignment="Center"/>
                        </StackPanel>
					</Grid>
				</Button>
				<Button x:Name="SaveButton" MaxHeight="30" Grid.Column="3" Click="SaveButton_Click" ToolTip="{DynamicResource TipMainSave}">
					<StackPanel Orientation="Horizontal">
                        <Image x:Name="saveIcon" Width="20" Height="20" Source="{StaticResource IconSave}" Margin="0,0,5,0"/>
                        <TextBlock Text="{DynamicResource MainBtnSave}" VerticalAlignment="Center"/>
					</StackPanel>
				</Button>
			</Grid>
		</Grid>
	</Grid>
</Window>

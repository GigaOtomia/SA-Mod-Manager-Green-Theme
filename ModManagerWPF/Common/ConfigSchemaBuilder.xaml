<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					x:Class="ModManagerWPF.Common.ConfigSchemaGrid"
					x:ClassModifier="public">

	<Image x:Key="DeleteImage" Source="{DynamicResource IconDelete}" Margin="2"/>
	<Image x:Key="AddImage" Source="{DynamicResource IconAdd}" Margin="2"/>

	<Style x:Name="StyleDeleteButton" TargetType="{x:Type Button}" BasedOn="{StaticResource MainButtonStyle}">
		<Setter Property="Content" Value="{StaticResource DeleteImage}"/>
		<Setter Property="Width" Value="22"/>
		<Setter Property="Height" Value="22"/>
	</Style>

	<Style x:Key="StyleAddButton" TargetType="{x:Type Button}" BasedOn="{StaticResource MainButtonStyle}">
		<Setter Property="Content" Value="{StaticResource AddImage}"/>
		<Setter Property="Width" Value="22"/>
		<Setter Property="Height" Value="22"/>
	</Style>

	<Button x:Name="DeleteButton" x:Key="DeleteButtonKey" Grid.Column="0" Width="22" Height="22" Margin="5">
		<Image Source="{DynamicResource IconDelete}" Margin="2"/>
	</Button>

</ResourceDictionary>
<Window x:Class="ModManagerWPF.Common.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModManagerWPF.Common"
        mc:Ignorable="d" x:Name="Window"
        Height="250" Width="400"
		Style="{StaticResource SAWindow}"
		Closing="Window_Closing" WindowStartupLocation="CenterScreen">
	<Window.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="../Icons/Icons.xaml"/>
			</ResourceDictionary.MergedDictionaries>
			<MediaElement x:Key="GifTest" Source="../Icons/eggman-robotnik.gif" LoadedBehavior="Play" UnloadedBehavior="Manual" MediaEnded="LoopMedia"/>
		</ResourceDictionary>
	</Window.Resources>
	
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="10"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="10"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="10"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="30"/>
			<RowDefinition Height="10"/>
		</Grid.RowDefinitions>

		<Grid Grid.Column="1" Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" MinWidth="40"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" MinHeight="40"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>
			<Image x:Name="MessageIcon" VerticalAlignment="Center" HorizontalAlignment="Center"/>
			<TextBlock x:Name="MessageText" Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Margin="5" TextWrapping="Wrap"/>
		</Grid>

		<Grid x:Name="ButtonsGrid" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Right">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="100"/>
				<ColumnDefinition Width="10"/>
				<ColumnDefinition Width="100"/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="0"/>
				<RowDefinition Height="0"/>
			</Grid.RowDefinitions>

			<Button Content="{DynamicResource BtnOK}" Margin="0,5,0,5" Grid.Row="0" Grid.Column="2" Click="ButtonYes_Click"/>

			<Button x:Name="ButtonOK" Content="{DynamicResource BtnOK}" Grid.Row="1" Margin="0,5,0,5" Click="ButtonYes_Click"/>
			<Button x:Name="ButtonCancel" Content="{DynamicResource BtnCancel}" Grid.Row="1" Grid.Column="2" Margin="0,5,0,5" Click="ButtonClick"/>
			
			<Button x:Name="ButtonYes" Content="{DynamicResource BtnYes}" Grid.Row="2" Margin="0,5,0,5" Click="ButtonYes_Click"/>
			<Button x:Name="ButtonNo" Content="{DynamicResource BtnNo}" Grid.Row="2" Grid.Column="2" Margin="0,5,0,5" Click="ButtonClick"/>
		</Grid>
    </Grid>
</Window>
